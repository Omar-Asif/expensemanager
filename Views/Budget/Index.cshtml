@model expensemanager.ViewModels.BudgetFormViewModel
@{
    ViewData["Title"] = "Budget Planner";
}
<h2 class="h4 mb-3">Budget Planner</h2>
<form method="post" class="card shadow-sm rounded-4 p-4">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row g-3">
        <div class="col-12 col-md-2">
            <label asp-for="Year" class="form-label"></label>
            <input asp-for="Year" class="form-control" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="col-12 col-md-2">
            <label asp-for="Month" class="form-label"></label>
            <input asp-for="Month" class="form-control" />
            <span asp-validation-for="Month" class="text-danger"></span>
        </div>
        <div class="col-12 col-md-4">
            <label asp-for="MonthlyAmount" class="form-label"></label>
            <input asp-for="MonthlyAmount" class="form-control" />
            <span asp-validation-for="MonthlyAmount" class="text-danger"></span>
        </div>
    </div>
    <div class="mt-4 d-flex justify-content-end">
        <button type="submit" class="btn btn-primary rounded-pill">Save</button>
    </div>
</form>
@if (TempData["Message"] is string msg)
{
    <div class="alert alert-success rounded-4 shadow-sm mt-3">@msg</div>
}
