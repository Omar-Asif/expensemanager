@model expensemanager.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<h2 class="h4 mb-3">Login</h2>
<form asp-action="Login" method="post" class="card p-3 shadow-sm rounded-4">
    @Html.AntiForgeryToken()
    <input type="hidden" name="returnUrl" value="@Context.Request.Query["returnUrl"]" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="RememberMe" class="form-check-input" />
        <label asp-for="RememberMe" class="form-check-label"></label>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary rounded-pill">Login</button>
        <a asp-controller="Auth" asp-action="Register" class="btn btn-link">Register</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
