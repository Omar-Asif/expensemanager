@model expensemanager.ViewModels.ExpenseDetailsViewModel
@{
    ViewData["Title"] = "Delete Expense";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4">Delete Expense</h2>
    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back</a>
</div>
<div class="alert alert-warning rounded-4 shadow-sm">
    Are you sure you want to delete this expense?
</div>
<div class="card shadow-sm rounded-4 p-4 mb-3">
    <dl class="row mb-0">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>
        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">@Model.Amount.ToString("C")</dd>
        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>
        <dt class="col-sm-3">Category</dt>
        <dd class="col-sm-9">@Model.CategoryTitle</dd>
        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>
    </dl>
</div>
<form asp-action="Delete" method="post" class="d-flex justify-content-end gap-2">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger rounded-pill">Delete</button>
</form>
