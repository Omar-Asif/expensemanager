@model expensemanager.ViewModels.ExpenseFormViewModel
@{
    ViewData["Title"] = "Edit Expense";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4">Edit Expense</h2>
    <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">Back</a>
</div>
<form asp-action="Edit" method="post" class="card shadow-sm rounded-4 p-4">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    @await Html.PartialAsync("_ExpenseForm", Model)
    <div class="mt-4 d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary rounded-pill">Save Changes</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
