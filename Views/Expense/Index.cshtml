@model expensemanager.ViewModels.ExpenseListViewModel
@{
    ViewData["Title"] = "My Expenses";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="h4">My Expenses</h2>
    <div class="d-flex gap-2">
        <div class="badge bg-dark-subtle text-dark-emphasis rounded-pill px-3 py-2 shadow-sm">
            Total: @Model.TotalAmount.ToString("C")
        </div>
        <a asp-action="Create" class="btn btn-primary rounded-pill">Add Expense</a>
    </div>
</div>
<div class="card shadow-sm rounded-4">
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th class="text-end">Amount</th>
                    <th>Date</th>
                    <th>Category</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
            @if (!Model.Items.Any())
            {
                <tr>
                    <td colspan="5" class="text-center text-body-secondary py-4">No expenses recorded yet.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td class="text-end">@item.Amount.ToString("C")</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.CategoryTitle</td>
                        <td class="text-end">
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm rounded-pill">Details</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm rounded-pill">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm rounded-pill">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>
