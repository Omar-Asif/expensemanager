<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Expense Manager</title>
    <script>
        (function () {
            try {
                var theme = localStorage.getItem('theme') || 'dark';
                document.documentElement.setAttribute('data-bs-theme', theme);
            } catch { }
        })();
    </script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/expensemanager.styles.css" asp-append-version="true" />
</head>
<body class="bg-body">
    <header class="py-2 fin-surface">
        <div class="container d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center gap-3">
                <a class="navbar-brand fw-semibold text-white" asp-controller="Home" asp-action="Index">Expense Manager</a>
                <div class="fin-topbar">
                    <input class="form-control form-control-sm fin-search" placeholder="Search..." />
                    <a class="btn btn-sm btn-outline-secondary rounded-pill" asp-controller="Report" asp-action="MySummary">Export PDF</a>
                    <a class="btn btn-sm btn-primary rounded-pill" asp-controller="Expense" asp-action="Create">+ Expense</a>
                </div>
            </div>
            <div class="d-flex align-items-center gap-2">
                <button id="themeToggle" type="button" class="btn btn-outline-secondary rounded-pill" aria-label="Toggle dark mode">
                    <span class="theme-label">Theme</span>
                </button>
                @{
                    var uid = Context.Session.GetInt32("APP_USER_ID");
                    var name = Context.Session.GetString("APP_USER_NAME");
                }
                @if (uid is not null)
                {
                    <span class="text-body-secondary small me-2">Hello, @name</span>
                    <form asp-controller="Auth" asp-action="Logout" method="post" class="m-0">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-primary rounded-pill">Logout</button>
                    </form>
                }
                else
                {
                    <a class="btn btn-primary rounded-pill" asp-controller="Auth" asp-action="Login">Login</a>
                    <a class="btn btn-outline-primary rounded-pill" asp-controller="Auth" asp-action="Register">Register</a>
                }
            </div>
        </div>
    </header>

    <div class="container my-4">
        <div class="row g-3">
            <aside class="col-12 col-lg-3">
                <div class="fin-sidebar fin-surface p-3">
                    <div class="text-uppercase small text-body-secondary mb-2">Main</div>
                    <div class="d-grid gap-2">
                        @{
                            var role = Context.Session.GetString("APP_USER_ROLE");
                            var dashAction = string.Equals(role, "Admin", StringComparison.OrdinalIgnoreCase) ? "Admin" : "User";
                        }
                        <a class="btn btn-outline-secondary nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Dashboard"?"active":"")" asp-controller="Dashboard" asp-action="@dashAction">Dashboard</a>
                        <a class="btn btn-outline-secondary nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Income"?"active":"")" asp-controller="Income" asp-action="Index">Income</a>
                        <a class="btn btn-outline-secondary nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Expense"?"active":"")" asp-controller="Expense" asp-action="Index">Expenses</a>
                        <a class="btn btn-outline-secondary nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Budget"?"active":"")" asp-controller="Budget" asp-action="Index">Budget</a>
                        <a class="btn btn-outline-secondary nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Analytics"?"active":"")" asp-controller="Analytics" asp-action="Index">Analytics</a>
                        <a class="btn btn-outline-secondary nav-link" asp-controller="Report" asp-action="MySummary">Reports</a>
                    </div>
                </div>
            </aside>
            <section class="col-12 col-lg-9">
                <main role="main" class="app-surface p-3">
                    @RenderBody()
                </main>
            </section>
        </div>
    </div>

    <footer class="footer border-top py-2 fin-surface">
        <div class="container text-center small text-body-secondary">
            Developed by S.M. Shah Omar Asif, CSE, IUBAT © 2026. All rights reserved.
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
