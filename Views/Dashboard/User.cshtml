@model expensemanager.ViewModels.UserDashboardViewModel
@{
    ViewData["Title"] = "My Dashboard";
}
<div class="row g-3">
    <div class="col-12">
        <div class="card shadow-sm rounded-4">
            <div class="card-body d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-body-secondary">Welcome</div>
                    <div class="h4 m-0">@Model.UserName</div>
                </div>
                <div class="d-flex gap-2">
                    <a class="btn btn-outline-secondary rounded-pill" asp-controller="Income" asp-action="Create">Add Income</a>
                    <a class="btn btn-primary rounded-pill" asp-controller="Expense" asp-action="Create">Add Expense</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-3">
        <div class="card shadow-sm rounded-4">
            <div class="card-body">
                <div class="text-body-secondary">My Expenses</div>
                <div class="display-6">@Model.ExpensesCount</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-3">
        <div class="card shadow-sm rounded-4">
            <div class="card-body">
                <div class="text-body-secondary">Total Spent</div>
                <div class="display-6">@Model.TotalExpenseAmount.ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-3">
        <div class="card shadow-sm rounded-4">
            <div class="card-body">
                <div class="text-body-secondary">Total Income</div>
                <div class="display-6">@Model.TotalIncomeAmount.ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-3">
        <div class="card shadow-sm rounded-4">
            <div class="card-body">
                <div class="text-body-secondary">Remaining Balance</div>
                <div class="display-6">@Model.RemainingBalance.ToString("C")</div>
            </div>
        </div>
    </div>
</div>
