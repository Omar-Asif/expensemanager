@model expensemanager.ViewModels.UserDashboardViewModel
@{
    ViewData["Title"] = "My Dashboard";
}
<div class="row g-3">
    <div class="col-12">
        <div class="fin-surface p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="text-body-secondary">Welcome</div>
                    <div class="h4 m-0">@Model.UserName</div>
                </div>
                <div class="d-flex gap-2">
                    <a class="btn btn-outline-secondary rounded-pill" asp-controller="Income" asp-action="Create">Add Income</a>
                    <a class="btn btn-primary rounded-pill" asp-controller="Expense" asp-action="Create">Add Expense</a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 col-md-3">
        <div class="fin-surface fin-metric">
            <div class="icon"><i class="bi bi-cash"></i></div>
            <div>
                <div class="label">My Expenses</div>
                <div class="value">@Model.ExpensesCount</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-3">
        <div class="fin-surface fin-metric">
            <div class="icon"><i class="bi bi-graph-down"></i></div>
            <div>
                <div class="label">Total Spent</div>
                <div class="value">@Model.TotalExpenseAmount.ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-3">
        <div class="fin-surface fin-metric">
            <div class="icon"><i class="bi bi-graph-up"></i></div>
            <div>
                <div class="label">Total Income</div>
                <div class="value">@Model.TotalIncomeAmount.ToString("C")</div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-3">
        <div class="fin-surface fin-metric">
            <div class="icon"><i class="bi bi-wallet2"></i></div>
            <div>
                <div class="label">Remaining Balance</div>
                <div class="value">@Model.RemainingBalance.ToString("C")</div>
            </div>
        </div>
    </div>
</div>
